set -e

readonly PROGNAME="${0##*/}"
readonly SRCDIR="$(cd "$(dirname "${0}")" && pwd -P)"

info() {
  echo "${PROGNAME}: I: ${@}" 1>&2
}

# Installs git hooks into the git directory provided in git_dir.
setup_git() {
  local git_dir="${1}"; shift

  cd "${git_dir}/hooks"
  for hook in ../../admin/pre-commit; do
    info "Installing git hook ${hook##*/}"
    ln -s -f "${hook}" .
  done
  cd - >/dev/null 2>&1
}

main() {
  cd "${SRCDIR}"

  [ -d .git ] && setup_git .git
}

main "${@}"
